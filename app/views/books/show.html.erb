    <%= render 'users/userinfo', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% if current_user.id == @user.id %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
              <br>
              <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <td class="favorite">
              <%= render 'favorites/favorite', books: @books %>
            </td>
            <td>
              <%= link_to "コメント数：#{@books.book_comments.count}", book_path(@books.id) %>
            </td>
            <td>
              <%= link_to "Edit", edit_book_path(params[:id]), class: "btn-sm btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(params[:id]), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
            </td>
          </tr>
          <% else %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %>
              <br>
              <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <td class="favorite">
              <%= render 'favorites/favorite', books: @books %>
            </td>
            <td>
              <%= link_to "コメント数：#{@books.book_comments.count}", book_path(@books.id) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="comments">
        <%= render 'book_comments/comment', books: @books,book_comment: @book_comment %>
      </div>
    </div>
  </div>
</div>